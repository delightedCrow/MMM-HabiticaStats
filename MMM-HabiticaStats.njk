        <div class="ring-stats">
          <span class="current-stat">18</span> <span class="max-stat">/ 50</span>
        </div>
      </div>

      <div class="stat-ring">
        <div class="title">Mana</div>
        <i class="stat-icon hi-mana habitica-icon"></i>
        <svg viewBox="0 0 39 39" class="circular-chart">
          <circle class="shadow-circle" cx="50%" cy="50%" r="15.9155"/>
          <circle class="circle mana" stroke-dasharray="90, 100" cx="50%" cy="50%" r="15.9155"/>
        </svg>
        <div class="ring-stats">
          <span class="current-stat">46</span> <span class="max-stat">/ 50</span>
        </div>
      </div>

      <div class="stat-ring">
        <div class="title">Experience</div>
        <i class="stat-icon hi-experience habitica-icon"></i>
        <svg viewBox="0 0 39 39" class="circular-chart">
          <circle class="shadow-circle" cx="50%" cy="50%" r="15.9155"/>
          <circle class="circle experience" stroke-dasharray="45, 100" cx="50%" cy="50%" r="15.9155"/>
        </svg>
        <div class="ring-stats">
          <span class="current-stat">1999</span> <span class="max-stat">/ 3230</span>
        </div>
      </div>
    </div>

    <div class="death-warning">
      <i class="fas fa-skull"></i>
    WARNING: incoming damage is higher than remaining health!
    </div>

    <div class="due-today big-stat-group clearfix">
      <div class="title">Due Today</div>
      <div class="stat-group due">
        <i class="fas fa-calendar"></i><span class="big-stat">5</span> Dailies
      </div>
      <div class="stat-group due">
        <i class="fas fa-check-circle"></i><span class="big-stat">2</span> To Dos
      </div>
    </div>
    <div class="estimated-damage big-stat-group">
      <div class="title">Estimated Damage</div>
